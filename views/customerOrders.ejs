<!DOCTYPE html>
<html>
<head>
    <title>Customer Orders</title>
    <!-- Add Bootstrap CDN links for CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Customer Orders</h1>
        <h2><%= customerOrders.length > 0 ? `Orders for ${customerOrders[0].customerFirstName} ${customerOrders[0].customerLastName}` : 'No Orders Found' %></h2>

        <% if (customerOrders.length > 0) { %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% customerOrders.forEach(order => { %>
                        <tr>
                            <td><%= order.orderID %></td>
                            <td><%= order.quantity %></td>
                            <td><%= order.price %></td>
                            <td><%= order.totalAmount %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

            <p class="fw-bold">Total Payment: <%= totalPayment %></p>
        <% } %>
    </div>

    <!-- Add Bootstrap CDN link for JS (Optional, if you need Bootstrap JS functionality) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
