<!DOCTYPE html>
<html>

<head>
    <title>Modify Order</title>
</head>

<body>
    <h1>Modify Order</h1>

    <% if (order) { %>
        <p>
            <%= message %>
        </p>
        <h2>Modified Order Details for Order ID: <%= order._id %>
        </h2>
        <form action="/modify/<%= order._id %>" method="POST"> <!-- Use POST for modification submission -->

            <input type="hidden" name="orderId" value="<%= order._id %>">

            <label for="customerFirstName">First Name:</label>
            <input type="text" id="customerFirstName" name="customerFirstName" value="<%= order.customerFirstName %>"
                required><br><br>

            <label for="customerLastName">Last Name:</label>
            <input type="text" id="customerLastName" name="customerLastName" value="<%= order.customerLastName %>"
                required><br><br>

            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" value="<%= order.quantity %>" required><br><br>

            <label for="price">Price:</label>
            <input type="number" id="price" name="price" value="<%= order.price %>" required><br><br>

            <label for="foodOrdered">Food Ordered:</label>
            <input type="text" id="foodOrdered" name="foodOrdered" value="<%= order.foodOrdered %>" required><br><br>

            <button type="submit">Modify Order</button>
        </form>
        <% } else { %>
            <p>
                <%= message %>
            </p>
            <% } %>
</body>

</html>